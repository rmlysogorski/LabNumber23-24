@model LabNumber21Take2.Models.Item
@{
    ViewBag.Title = "Edit this item";
}

<h2>@ViewBag.Title</h2>

<form action="../Admin/EditItem" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <input type="text" name="Name" value="@Model.Name" placeholder="Item Name: " />
    <br />
    <input type="text" name="Description" value="@Model.Description" placeholder="Description: " />
    <br />
    <input type="number" name="Quantity" value="@Model.Quantity" placeholder="In Stock: " />
    <br />
    <input type="text" name="Price" value="@Model.Price" placeholder="Price :" />
    <br />
    <input type="submit" value="Edit Item" />

</form>